<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC 
"-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN" 
"http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
<tiles-definitions>
	<definition name="login.*" template="/WEB-INF/tiles/template/default/loginTempl.jsp">
		<put-attribute name="body" value="/WEB-INF/views/login/{1}.jsp"/>
	</definition>
	<definition name="join.*" template="/WEB-INF/tiles/template/default/joinTempl.jsp">
		<put-attribute name="body" value="/WEB-INF/views/join/{1}.jsp"/>
	</definition>
	<definition name="*.*" template="/WEB-INF/tiles/template/default/templ.jsp">
		<put-attribute name="header" value="/WEB-INF/tiles/template/default/header.jsp"/>
		<put-attribute name="search" value="/WEB-INF/tiles/template/default/search.jsp"/>
		<put-attribute name="body" value="/WEB-INF/views/{1}/{2}.jsp"/>
	</definition>
</tiles-definitions>